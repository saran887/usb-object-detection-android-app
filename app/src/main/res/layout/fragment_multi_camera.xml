<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <!-- Camera 1 - Full Screen with Auto-Switching -->
    <FrameLayout
        android:id="@+id/camera_1_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">
        <com.jiangdg.ausbc.widget.AspectRatioTextureView
            android:id="@+id/texture_view_1"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <com.jiangdg.demo.OverlayView
            android:id="@+id/overlay_view_1"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </FrameLayout>

    <!-- Camera 2 - Full Screen with Auto-Switching -->
    <FrameLayout
        android:id="@+id/camera_2_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">
        <com.jiangdg.ausbc.widget.AspectRatioTextureView
            android:id="@+id/texture_view_2"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <com.jiangdg.demo.OverlayView
            android:id="@+id/overlay_view_2"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </FrameLayout>

    <!-- Camera 3 - Full Screen with Auto-Switching -->
    <FrameLayout
        android:id="@+id/camera_3_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">
        <com.jiangdg.ausbc.widget.AspectRatioTextureView
            android:id="@+id/texture_view_3"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <com.jiangdg.demo.OverlayView
            android:id="@+id/overlay_view_3"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </FrameLayout>

    <!-- Camera 4 - Full Screen with Auto-Switching -->
    <FrameLayout
        android:id="@+id/camera_4_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">
        <com.jiangdg.ausbc.widget.AspectRatioTextureView
            android:id="@+id/texture_view_4"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <com.jiangdg.demo.OverlayView
            android:id="@+id/overlay_view_4"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </FrameLayout>

    <!-- Hidden stub views for compatibility -->
    <TextView
        android:id="@+id/camera_count_text"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/permission_status_text"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/active_camera_text"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/no_camera_indicator"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone" />

    <!-- Camera Controls - Fully Transparent Individual Buttons -->
    <LinearLayout
        android:id="@+id/camera_controls"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="20dp"
        android:background="@android:color/transparent"
        android:elevation="10dp"
        android:orientation="horizontal"
        android:padding="0dp">

        <Button
            android:id="@+id/camera_1_button"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_margin="8dp"
            android:alpha="0.75"
            android:backgroundTint="#662196F3"
            android:elevation="8dp"
            android:text="1"
            android:textColor="@android:color/white"
            android:textSize="22sp"
            android:textStyle="bold"
            android:visibility="visible" />

        <Button
            android:id="@+id/camera_2_button"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_margin="8dp"
            android:alpha="0.75"
            android:backgroundTint="#664CAF50"
            android:elevation="8dp"
            android:text="2"
            android:textColor="@android:color/white"
            android:textSize="22sp"
            android:textStyle="bold"
            android:visibility="visible" />

        <Button
            android:id="@+id/camera_3_button"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_margin="8dp"
            android:alpha="0.75"
            android:backgroundTint="#66FF9800"
            android:elevation="8dp"
            android:text="3"
            android:textColor="@android:color/white"
            android:textSize="22sp"
            android:textStyle="bold"
            android:visibility="visible" />

        <Button
            android:id="@+id/camera_4_button"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_margin="8dp"
            android:alpha="0.75"
            android:backgroundTint="#66F44336"
            android:elevation="8dp"
            android:text="4"
            android:textColor="@android:color/white"
            android:textSize="22sp"
            android:textStyle="bold"
            android:visibility="visible" />

        <Button
            android:id="@+id/auto_switch_button"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="gone" />

        <Button
            android:id="@+id/view_logs_button"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="gone" />
    </LinearLayout>

    <!-- Camera Info - Top Left -->
    <TextView
        android:id="@+id/camera_info_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|start"
        android:layout_margin="8dp"
        android:background="#CC000000"
        android:padding="6dp"
        android:text="Camera: --"
        android:textColor="#2196F3"
        android:textSize="14sp"
        android:textStyle="bold"
        android:visibility="visible" />

    <!-- FPS Counter - Top Right -->
    <TextView
        android:id="@+id/fps_counter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|end"
        android:layout_margin="8dp"
        android:background="#CC000000"
        android:padding="6dp"
        android:text="FPS: --"
        android:textColor="#4CAF50"
        android:textSize="14sp"
        android:textStyle="bold"
        android:visibility="visible" />

</FrameLayout>