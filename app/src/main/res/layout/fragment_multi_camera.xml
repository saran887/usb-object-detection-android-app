<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/black">

    <!-- Main Camera Layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:background="@color/black">

    <!-- Left Column -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <!-- Camera 1 -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_margin="4dp"
            android:background="@color/black">

            <com.jiangdg.ausbc.widget.AspectRatioTextureView
                android:id="@+id/texture_view_1"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <com.jiangdg.demo.OverlayView
                android:id="@+id/overlay_view_1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Camera 1"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:background="#80000000"
                android:padding="6dp"
                android:layout_gravity="top|start"
                android:layout_margin="4dp" />

        </FrameLayout>

        <!-- Camera 3 -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_margin="4dp"
            android:background="@color/black">

            <com.jiangdg.ausbc.widget.AspectRatioTextureView
                android:id="@+id/texture_view_3"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <com.jiangdg.demo.OverlayView
                android:id="@+id/overlay_view_3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Camera 3"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:background="#80000000"
                android:padding="6dp"
                android:layout_gravity="top|start"
                android:layout_margin="4dp" />

        </FrameLayout>

    </LinearLayout>

    <!-- Right Column -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <!-- Camera 2 -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_margin="4dp"
            android:background="@color/black">

            <com.jiangdg.ausbc.widget.AspectRatioTextureView
                android:id="@+id/texture_view_2"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <com.jiangdg.demo.OverlayView
                android:id="@+id/overlay_view_2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Camera 2"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:background="#80000000"
                android:padding="6dp"
                android:layout_gravity="top|start"
                android:layout_margin="4dp" />

        </FrameLayout>

        <!-- Camera 4 -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_margin="4dp"
            android:background="@color/black">

            <com.jiangdg.ausbc.widget.AspectRatioTextureView
                android:id="@+id/texture_view_4"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <com.jiangdg.demo.OverlayView
                android:id="@+id/overlay_view_4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Camera 4"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:background="#80000000"
                android:padding="6dp"
                android:layout_gravity="top|start"
                android:layout_margin="4dp" />

        </FrameLayout>

    </LinearLayout>

    </LinearLayout>

    <!-- Camera Status Bar at Bottom -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#CC000000"
        android:padding="12dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/camera_count_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Cameras Connected: 0/4"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:gravity="start" />

        <TextView
            android:id="@+id/permission_status_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ready"
            android:textColor="#4CAF50"
            android:textSize="14sp"
            android:layout_marginStart="16dp" />

    </LinearLayout>

</LinearLayout>